{
    // General settings
    "layer": "top",
    "height": 39,
    "margin-top": 8,
    "margin-bottom": 0,
    "margin-left": 0,
    "margin-right": 0,
    "spacing": 0,

    // Load modules
    "include": ["~/.config/waybar/modules.json"],

    // Modules Left
    "modules-left": ["custom/poweroff", "custom/apps", "custom/clipboard", "hyprland/workspaces", "wlr/taskbar", "mpris"],

    // Modules Center
    "modules-center": ["clock"],

    // Modules Right
    "modules-right": ["mpd", "tray", "group/hardware", "wireplumber", "bluetooth", "network", "battery"],

    // Group Hardware
    "group/hardware": {
        "orientation": "horizontal",
        "modules": [
            "cpu",
            "custom/gpu",
            "memory",
            "disk",
        ]
    }
}

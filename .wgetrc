####################################################### wget configuration
# will not override the local files, if local file is the same, but newer
timestamping = on
# force wget to use utf-8 as the default system encoding
# comment out if it creates problems
#local_encoding = UTF-8
# use the last component of a redirection URL for the local file name
trust_server_names = on
# will not retrieve files outside the directory hierarchy
no_parent = on
# set all applicable timeout values to 60 sec instead of default of 15 min
timeout = 60
# set number of retries (when download fails) to 5 instead of default 20
tries = 5
# consider 'connection refused' a transient error, i.e. retry nonetheless
retry_connrefused = on
# follow ftp links from html documents by default
follow_ftp = on
# add a ‘.html’ extension to ‘text/html’ or ‘application/xhtml+xml’ files that lack one, or a ‘.css’ extension to ‘text/css’ files that lack one
adjust_extensions = on
# ignore 'robots.txt' and robots content in meta tags
robots = off
# print http or ftp server responses
server_response = on
# user agent identification sent to the http server
#user_agent = Mozilla/5.0 (compatible; MSIE 9.0; Windows NT 6.1; Trident/5.0)
#!/bin/sh
USERINFO_FILE="${XDG_CONFIG_HOME:=$HOME/.config}/USERINFO"
if [ -f "$USERINFO_FILE" ]; then
   . $USERINFO_FILE
else
    RESOLUTION_W="1920"
    RESOLUTION_H="1080"
    RESOLUTION_DEPTH="32"
    RESOLUTION_SCALE="1"
    RESOLUTION_DPI="200"
    XOUTPUT="HDMI1"
    RESOLUTION_W2="1920"
    RESOLUTION_H2="1080"
    RESOLUTION_DEPTH2="32"
    RESOLUTION_SCALE2="1"
    RESOLUTION_DPI2="200"
    XOUTPUT2="HDMI2"
fi

xrandr \
    --output "${XOUTPUT}" \
    --mode "${RESOLUTION_W}x${RESOLUTION_H}" \
    --scale "${RESOLUTION_SCALE}" \
    --dpi "${RESOLUTION_DPI}" \
    --primary

xrandr \
    --output "${XOUTPUT2}" \
    --mode "${RESOLUTION_W2}x${RESOLUTION_H2}" \
    --scale "${RESOLUTION_SCALE2}" \
    --dpi "${RESOLUTION_DPI2}" \
    --pos "${RESOLUTION_W2}x0" \
    --above "${XOUTPUT}"

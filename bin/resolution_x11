#!/usr/bin/env bash
USERINFO_FILE="${XDG_CONFIG_HOME:=$HOME/.config}/USERINFO"
if [ -f "$USERINFO_FILE" ]; then
   . $USERINFO_FILE
else
    RESOLUTION_W="1920"
    RESOLUTION_H="1080"
    RESOLUTION_DEPTH="32"
    RESOLUTION_SCALE="1"
    RESOLUTION_DPI="200"
    XOUTPUT="HDMI1"
fi
xrandr \
    --output "$XOUTPUT" \
    --mode "${RESOLUTION_W}x${RESOLUTION_H}" \
    --scale "${RESOLUTION_SCALE}" \
    --dpi "${RESOLUTION_DPI}" \
    --primary

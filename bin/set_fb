#!/bin/sh
USERINFO_FILE="${XDG_CONFIG_HOME:=$HOME/.config}/USERINFO"
if [ -f "$USERINFO_FILE" ]; then
   . $USERINFO_FILE
fi
RESOLUTION_W="${RESOLUTION_W:=1920}"
RESOLUTION_H="${RESOLUTION_H:=1080}"
RESOLUTION_DEPTH="${RESOLUTION_DEPTH:=32}"

fbset -g $RESOLUTION_W $RESOLUTION_H $RESOLUTION_W $RESOLUTION_H $RESOLUTION_DEPTH

{
    "manifest_version": 2,
    "name": "#phd-ark-capitalize Thunderbird Theme",
    "author": "phdenzel",
    "version": "1.0.0",
    "applications": {
        "gecko": {
            "id": "phdark@addons.thunderbird.net",
            "strict_min_version": "60.0"
        }
    },
    "description": "#phd-ark-capitalize theme for Thunderbird",
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
    "permissions": [
        "theme",
        "messagesModify",
        "messagesRead"
    ],
    "background": {
        "page": "background.html"
    },
    "theme_experiment": {
        "stylesheet": "style.css",
        "colors": {
            "exp_primary": "--primary",
            "exp_primary_color": "--primary-color",
            "exp_primary_hover": "--primary-color-hover",
            "exp_primary1": "--color-blue-10",
            "exp_primary2": "--color-blue-20",
            "exp_primary3": "--color-blue-30",
            "exp_primary4": "--color-blue-40",
            "exp_primary5": "--color-blue-50",
            "exp_primary6": "--color-blue-60",
            "exp_primary7": "--color-blue-70",
            "exp_primary8": "--color-blue-80",
            "exp_primary9": "--color-blue-90",
            "exp_button_background": "--button-primary-background-color",
            "exp_button_text": "--button-primary-text-color",
            "exp_button_border": "--button-primary-border-color",
            "exp_button_hover": "--button-hover-background-color",
            "exp_btn_bg_hover": "--btn-bg-hover",
            "exp_folder_color_inbox": "--folder-color-inbox",
            "exp_folder_color_draft": "--folder-color-draft",
            "exp_folder_color_template": "--folder-color-template",
            "exp_folder_color_sent": "--folder-color-sent",
            "exp_folder_color_archive": "--folder-color-archive",
            "exp_folder_color_spam": "--folder-color-spam",
            "exp_folder_color_trash": "--folder-color-trash",
            "exp_folder_color_folder": "--folder-color-folder",
            "exp_folder_color": "--folder-color",
            "exp_new_message": "--new-message-color",
            "exp_unread_count_background": "--folderpane-unread-new-count-background"
        }
    }
}
